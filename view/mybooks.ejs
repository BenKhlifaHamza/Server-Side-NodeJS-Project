<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Firs Project</title>
    <!-- ***** Import Links Css BootStrap ***** -->
    <%-include('links/bootstrapcsslinks.ejs')%>
    <!-- *************************************** -->
  </head>

  <body>
    <!-- ***** Preloader Start ***** -->
    <%-include('components/load.ejs')%>
    <!-- ***** Preloader End ***** -->

    <!--Start Header -->
    <%-include('components/top.ejs')%>
    <!--End Header -->

    <br /><br /><br />

    <div class="container mt-5">
      <div class="text-content">
        <h2>My All Books</h2>
        <br />
      </div>
      <div class="row grid">
        <% for (let book of books) { %>
          <div class="col-md-4">
            <div class="product-item">
              <a href="/products/<%= book._id %>/" target="_blank">
                <div class="container">
                  <img src="books/<%= book.image %>" style="height: 300px" alt="" />
                </div>
              </a>
              <div class="down-content">
                <a href="/products/<%= book._id %>/" target="_blank">
                  <h4><%= book.title %></h4>
                </a>
                <h6>$<%= book.price %></h6>
                <br />
                <br />
                <h5>Author: <%= book.author %></h5>
                <h5>Genre: <%= book.genre %></h5>
                <h5>Year: <%= book.year %></h5>
                <ul class="stars">
                  <li><i class="fa fa-star"></i></li>
                  <li><i class="fa fa-star"></i></li>
                  <li><i class="fa fa-star"></i></li>
                  <li><i class="fa fa-star"></i></li>
                  <li><i class="fa fa-star"></i></li>
                </ul>        
                <!-- Add Edit and Delete buttons/icons -->
                <div>
                  <form action="/mybooks/update/<%= book._id %>" method="GET" style="display: inline-block;">
                    <input type="hidden" name="_method" value="GET">
                    <button class="btn btn-primary" type="submit">Edit</button>
                  </form>
                  
                  <form action="/mybooks/delete/<%= book._id %>" method="POST" style="display: inline-block;">
                    <!-- Use a hidden input field to set the request method to DELETE -->
                    <input type="hidden" name="_method" value="DELETE">
                    <!-- Add a delete button -->
                    <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure you want to delete this book?')">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% } %>
        <!-- Footer And JavaScript Files-->
        <%-include('components/bottom.ejs')%>
      </div>
    </div>
  </body>
</html>
