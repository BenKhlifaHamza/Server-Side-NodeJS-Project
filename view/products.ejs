<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>First Project</title>
    <!-- ***** Import Links Css BootStrap ***** -->
    <%-include('links/bootstrapcsslinks.ejs')%>
    <!-- *************************************** -->
  </head>
  <body>
    <!-- ***** Preloader Start ***** -->
    <%-include('components/load.ejs')%>
    <!-- ***** Preloader End ***** -->

    <!--Start Header -->
    <%-include('components/top.ejs')%>
    <!--End Header -->

    <!-- Page Content -->
    <div class="page-heading products-heading header-text">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="text-content">
              <h4>new arrivals</h4>
              <h2>Easy Education</h2>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="products">
        <div class="row">
          <div class="col-md-12">
            <div class="filters">
              <ul>
                <li class="active" data-filter="*">All Products</li>
                <li data-filter=".des">Featured</li>
                <li data-filter=".dev">Flash Deals</li>
                <li data-filter=".gra">Last Minute</li>
              </ul>
            </div>
          </div>
        </div>

        <div class="row grid">
          <% for(let book of books) {%>
          <div class="col-md-4">
            <div class="product-item">
              <a href="/products/<%= book._id %>/" target="_blank">
                <div class="container">
                  <img
                    src="books/<%= book.image %>"
                    style="height: 300px"
                    alt=""
                  />
                </div>
              </a>
              <div class="down-content">
                <a href="/products/<%= book._id %>/" target="_blank"><h4><%= book.title %></h4></a>
                <h6>$<%= book.price %></h6>
                <br />
                <br />
                <h5>Author: <%= book.author %></h5>
                <h5>Genre: <%= book.genre %></h5>
                <h5>Year: <%= book.year %></h5>
                <ul class="stars">
                  <li><i class="fa fa-star"></i></li>
                  <li><i class="fa fa-star"></i></li>
                  <li><i class="fa fa-star"></i></li>
                  <li><i class="fa fa-star"></i></li>
                  <li><i class="fa fa-star"></i></li>
                </ul>
                <span>Reviews (24)</span>
              </div>
            </div>
          </div>
          <% } %>
          <!-- Pagination Section -->
          <div class="col-md-12">
            <ul class="pages">
              <li><a href="#">1</a></li>
              <li class="active"><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">4</a></li>
              <li>
                <a href="#"><i class="fa fa-angle-double-right"></i></a>
              </li>
            </ul>
          </div>
          <!-- Footer And JavaScript Files -->
          <%-include('components/bottom.ejs')%>
        </div>
      </div>
    </div>
  </body>
</html>
